<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jugadas"
    tools:context=".NarutoActivity">

    <Button
        android:id="@+id/btnVideoNaruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <TextView
        android:id="@+id/txtTexto"
        android:layout_width="360dp"
        android:layout_height="381dp"
        android:autoText="false"
        android:background="#45121212"
        android:gravity="center"
        android:text="Ronaldinho, es hoy por hoy, qué duda cabe, el mejor futbolista del mundo. Por esto hacemos un pequeño análisis de sus éxitos deportivos.   Velocidad. Su atlética constitución física y su forma de juego le hacen ser y parecer un jugador muy rápido y ágil. Ronaldinho sabe explotar muy bien sus cualidades, su 'sprint' y su velocidad de piernas para salir airoso de regates y eslalons. Además, es igualmente veloz con el balón controlado."
        android:textColor="#FAF9F9"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

</androidx.constraintlayout.widget.ConstraintLayout>